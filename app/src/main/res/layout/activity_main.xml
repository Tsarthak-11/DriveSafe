<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/navigationbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripple"
        android:onClick="onClickNavigation"
        android:padding="12dp"
        android:text="Navigation"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/locatebtn"
        app:layout_constraintTop_toBottomOf="@+id/coordinates" />

    <Button
        android:id="@+id/locatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripple"
        android:onClick="onClickLocateOnMap"
        android:padding="12dp"
        android:text="Locate On Map"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/navigationbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinates" />

    <Button
        android:id="@+id/nearbybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/ripple"
        android:onClick="onClickNearby"
        android:padding="12dp"
        android:text="Nearby Hospitals"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locatebtn" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/ripple"
        android:onClick="onClickNearbyps"
        android:padding="12dp"
        android:text="Nearby Police Station"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nearbybtn"
        app:layout_constraintTop_toBottomOf="@+id/locatebtn" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/ripple"
        android:onClick="onClickGetAddress"
        android:padding="12dp"
        android:text="Get Address"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearbybtn" />

    <TextView

        android:id="@+id/text2"
        android:layout_width="0dp"

        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:text="Update Information:"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userLay4"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/messagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_text"
        android:padding="20dp"
        android:text="Status : Safe"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_text"
        android:padding="10dp"
        android:text="Coordinate :- \n"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagetext" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userLay1"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_grey"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="@+id/userLay2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userLay2"
        app:layout_constraintTop_toBottomOf="@+id/userLay2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/driver_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Driver Name"
            android:textColorHint="@android:color/white"
            android:inputType="text"

            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userLay2"
        android:layout_width="341dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_grey"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="@+id/userLay4"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/userLay4"
        app:layout_constraintTop_toBottomOf="@+id/userLay4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/driver_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:hint="Driver Contact"
            android:textColorHint="@android:color/white"
            android:inputType="text"/>


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userLay4"
        android:layout_width="341dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:background="@color/light_grey"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:hint="Vehicle Number"
            android:textColorHint="@android:color/white"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="@+id/userLay1"
        app:layout_constraintTop_toBottomOf="@+id/userLay1"
        app:layout_constraintVertical_bias="0.407" />
</androidx.constraintlayout.widget.ConstraintLayout>