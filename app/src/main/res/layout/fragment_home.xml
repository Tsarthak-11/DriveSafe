<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/darkblue">


    <Button
        android:id="@+id/safebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:onClick="OnClickIAmSafe"
        android:padding="12dp"
        android:text="I am Safe"
        android:textColor="#66F9B0"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/helpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="OnClickAccident"
        android:padding="12dp"
        android:text="Crash Detected"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/safebtn"
        app:layout_constraintStart_toStartOf="@+id/safebtn"
        app:layout_constraintTop_toBottomOf="@+id/safebtn" />


</androidx.constraintlayout.widget.ConstraintLayout>